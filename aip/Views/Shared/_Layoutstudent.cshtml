<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/menu.css" rel="stylesheet" />
</head>
<body style="padding: 0px 0px 0px 0px;">
    <div class="wrapper">
        <nav class="vertical" id="menu">
            <ul>
                <li><a href="/student/studenthome"><span class="glyphicon glyphicon-home"></span>    HOME</a></li>
                <li><a href="/student/profile"><span class="glyphicon glyphicon-user"></span>    PROFILE</a></li>
                <li><a href="/student/inbox"><span class="glyphicon glyphicon-inbox"></span>    INBOX</a></li>
                <li><a href="/student/sentitem"><span class="glyphicon glyphicon-send"></span>    SENT ITEM</a></li>
                <li><a href="/student/compose"><span class="glyphicon glyphicon-envelope"></span>    COMPOSE</a></li>
                <li><a href="/student/dailyreport"><span class="glyphicon glyphicon-list-alt"></span>    DAILY REPORT</a></li>
                <li><a href="/student/logout"><span class="glyphicon glyphicon-log-out"></span>   LOGOUT</a></li>
            </ul>
        </nav>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer style="margin-left:80px;">
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
